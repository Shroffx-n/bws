{
  "manifest_version": 2,
  "name": "Portab Session Exporter",
  "version": "1.0.0",
  "description": "Export your browser tabs as a portable .portab session file",

  "permissions": [
    "tabs",
    "downloads",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Export Session"
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
